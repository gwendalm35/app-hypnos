{% extends 'base.html.twig' %}

{% block title %}Hypnos | Réinitialiser mot de passe{% endblock %}

{% block content %}
    <main>
        <article class="container mt-4">
            <h1 class="text-center">Réinitialiser mot de passe</h1>
            {% for flash_error in app.flashes('reset_password_error') %}
                <section>
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                </section>
                {% endfor %}
            <section class="col-md-6 m-auto">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div class="text-center">
                        <small>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button class="btn btn-info">Envoyer un email de réinitialisation de mot de passe</button>
                    </div>
                {{ form_end(requestForm) }}
            </section>
        </article>
    </main>
{% endblock %}
